<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edukacine2">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".AddUserActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminMenuActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".KidMenuActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".TaskGenerationActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".TaskGenerationSuccessActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".TaskPerformActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".StickersActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".TaskEndActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".GiveStickerActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".GiveStickerSuccessActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".AdminResultActivity"
            android:windowSoftInputMode="adjustPan">
        android:label="@string/app_name"></activity>
        <activity android:name=".ResultDetailActivity" />
    </application>

</manifest>